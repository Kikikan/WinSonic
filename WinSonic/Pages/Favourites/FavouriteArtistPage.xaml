<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinSonic.Pages.Favourites.FavouriteArtistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinSonic.Pages.Favourites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:control="using:WinSonic.Pages.Control"
    Loaded="Page_Loaded">

    <Grid Margin="25 25 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Favourites" Style="{StaticResource HeaderTextBlockStyle}" Margin="0 0 0 25"/>
            <TextBlock Text="Artists" Style="{StaticResource SubheaderTextBlockStyle}" Margin="0 0 0 15"/>
        </StackPanel>
        <control:PictureControlPage x:Name="PictureControl" Grid.Row="1"/>
    </Grid>
</Page>
